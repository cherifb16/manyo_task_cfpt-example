<p id="notice"><%= notice %></p>

<h1>Label list page</h1>

<table>
  <thead>
    <tr>
    <th>Name</th>.
    <th>Number of tasks</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @labels.each do |label| %>
      <tr>
        <td><%= label.name %></td>
        <td><%= label.tasks.count %></td>
        <td><%= link_to t('common.edit'), edit_label_path(label), class: 'edit-label' %></td>
        <td><%= link_to t('common.destroy'), label, method: :delete, data: { confirm: t('common.confirm_destroy') }, class: 'destroy-label' %></td>
      </tr>
    <% end %>
  </tbody>
</table>